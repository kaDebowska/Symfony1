{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/record.css') }}">

{% endblock %}

{% block body %}
    <h1>{{ 'title.task_list'|trans }}</h1>
    {% if tasks is defined and tasks|length %}
    <table>
        <tr>
            <th>{{ 'label.id'|trans }}</th>
            <th>{{ 'label.created_at'|trans }}</th>
            <th>{{ 'label.updated_at'|trans }}</th>
            <th>{{ 'label.title'|trans }}</th>
            <th>{{ 'label.comment'|trans }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.createdAt|date('Y/m/d') }}</td>
                <td>{{ task.updatedAt|date('Y/m/d') }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.comment }}</td>
                <td>
                    <a href="{{ url('task_show', {id: task.id}) }}" title="{{ 'action.view'|trans }}">
                        {{ 'action.view'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% else %}
    <p> {{ 'message.empty_list'|trans }}</p>
    {% endif %}
{% endblock %}